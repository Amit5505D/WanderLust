<style>
  .search-form {
    display: flex;
    align-items: center;
    border: 1px solid #ddd;
    border-radius: 2rem;
    padding: 0.2rem 0.6rem;
    background: #fff;
    box-shadow: 0 1px 4px rgba(0,0,0,0.1);
  }

  .search-form input {
    border: none;
    outline: none;
    padding: 0.5rem 0.8rem;
    border-radius: 2rem;
    flex: 1;
    font-size: 0.9rem;
  }

  .search-form button {
    background-color: #ff385c;
    color: #fff;
    border: none;
    border-radius: 50%;
    width: 2.2rem;
    height: 2.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background 0.2s ease;
  }

  .search-form button:hover {
    background-color: #e03150;
  }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-solid fa-compass"></i> StayHub</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <!-- Left side links -->
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
      </ul>

      <!-- Center search bar -->
      <form class="search-form me-auto" role="search">
        <input type="search" placeholder="Search listings..." aria-label="Search"/>
        <button type="submit"><i class="fa-solid fa-search"></i></button>
      </form>

      <!-- Right side user auth links -->
      <ul class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Add Listing</a>
        <% if (!currentUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/login"><b>Login</b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/signup"><b>Sign Up</b></a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <span class="nav-link">Hello, <strong><%= currentUser.username %></strong></span>
          </li>
          <li class="nav-item">
            <form action="/logout" method="POST" class="d-inline">
              <button class="btn btn-sm btn-outline-danger nav-link" style="border: none; background: none;">Logout</button>
            </form>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
